/* page/index/index.wxss */
page{
  background: #eee;
}
.page__title{
  color: #8a8a8a;
  margin: 30rpx;
  margin-left: 50rpx;
  margin-top: 40rpx;
  font-size: 40rpx
}
.u-wrp-bnr {
  width: 100%;
  height: 400rpx;
  display: block;
  margin:0rpx 0rpx 0rpx 0rpx;
  background: #f0f0f0;
}
.u-img-slide {
  width: 100%;
  height: inherit;
}

.gride{
  display: flex;
  justify-content: space-around; 
}
.gride .item{
  width: 45%; 
}
.gride .item view{
  width: 100%;
  height: auto;
  margin-bottom: 40rpx;
  text-align: center;
  border-radius: 4rpx;
  box-shadow: 2rpx 2rpx 2rpx #999;
  background: #fff;
}
.gride .item view image{
  display: block;
  width: 100%;
  border-radius: 4rpx;
}
.gride .item view text{
  width: 100%;
  font-size: 35rpx;
}

.add_icon{
  position: fixed;
  width:84rpx;
  height:84rpx;
  bottom: 20rpx;
  right: 10rpx;
}